<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--<style name="AppTheme" parent="AppTheme.Base"></style>-->
    <!--<style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar"></style>-->

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="SecondaryTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeBackground">@drawable/cab_background</item>
        <item name="android:actionModeBackground">@color/pressed_color</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_cancel</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_cancel</item>

    </style>

    <declare-styleable name="CustomFontTxtView">
        <attr name="customFont" format="string" />
    </declare-styleable>

    <style name="matchParentCenter" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@drawable/elements_backgound</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="actionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:layout_height">150dp</item>
        <item name="background">@color/red</item>
        <item name="height">150dp</item>
        <!--<item name="actionModeBackground">@color/red</item>-->
        <!--<item name="actionMode">@color/red</item>-->
    </style>
    <style name="scoreChangers" parent="matchParentCenter">
        <item name="android:textSize">@dimen/no_led_font_size</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="label" parent="matchParentCenter">
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_marginBottom">@dimen/label_margin</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="numberPicker">
        <!--<item name="android:layout_width">match_parent</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ledDigits" parent="matchParentCenter">
        <item name="customFont">fonts/PilcrowIcons.ttf</item>
        <!--<item name="android:layout_height">wrap_content</item>-->
        <item name="android:padding">15dp</item>

    </style>


    <style name="ledDigitsWeight2" parent="ledDigits">
        <item name="android:textSize">@dimen/led_weight2_font_size</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="scoreStyle" parent="ledDigitsWeight2">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="scoreStyleSimple" parent="ledDigits">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/led_simple_font_size</item>
    </style>

    <style name="bottomLineStyle" parent="ledDigits">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/led_weight1_font_size</item>
        <item name="android:layout_marginBottom">@dimen/bottom_line_margin</item>
    </style>

    <style name="nbaTimeoutsStyle" parent="ledDigits">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/led_nba_to_font_size</item>
        <item name="android:layout_marginBottom">@dimen/bottom_line_margin2</item>
    </style>

    <style name="cameraLineView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/camera_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
